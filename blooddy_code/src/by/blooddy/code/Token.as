package by.blooddy.code {

	/**
	 * @author			BlooDHounD
	 * @version			1.0
	 * @langversion		3.0
	 * @playerversion	9.0
	 */
	public class Token {

		//--------------------------------------------------------------------------
		//
		//  Constructor
		//
		//--------------------------------------------------------------------------

		/**
		 * Constructor
		 * 
		 * @param	kind	
		 * @param	text	
		 */
		public function Token(kind:uint, text:String) {
			super();
			this.kind = kind;
			this.text = text;
		}

		//--------------------------------------------------------------------------
		//
		//  Properties
		//
		//--------------------------------------------------------------------------

		//----------------------------------
		//  kind
		//----------------------------------

		/**
		 * @private
		 */
		public var kind:uint;

		//----------------------------------
		//  text
		//----------------------------------

		/**
		 * @private
		 */
		public var text:String;

		//--------------------------------------------------------------------------
		//
		//  Methods
		//
		//--------------------------------------------------------------------------

		/**
		 * @private
		 */
		public function toString():String {
			return '{ kind=' + this.kind + ', text="' + this.text+ '" }';
		}

	}

}